</head>
<body>

    <div class="main">

        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form asp-action="RegisterIndex" method="POST" class="register-form" id="register-form">
                            <div class="form-group">
                                <label asp-for="Username" for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="Username" type="text" name="Username" id="name" placeholder="Username" />
                                <span asp-validation-for="Username" class="text-danger" style="color:red"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" for="email"><i class="zmdi zmdi-email"></i></label>
                                <input asp-for="Email" type="email" name="Email" id="email" placeholder="Email address" />
                                <span asp-validation-for="Email" class="text-danger" style="color:red"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Pass" for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input asp-for="Pass" type="password" name="Pass" id="pass" placeholder="Password" />
                                <span asp-validation-for="Email" class="text-danger" style="color:red" ></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Repass" for="re_pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input asp-for="Repass" type="password" name="Repass" id="re_pass" placeholder="Repeat your password" />
                                <span asp-validation-for="Repass" class="text-danger" style="color:red"></span>
                            </div>
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="#" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>

